<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Base.Theme.CalingaApp" parent="Theme.Material3.Light.NoActionBar">
        <!-- Customize your light theme here. -->
        <item name="colorPrimary">@color/light_blue_button</item>
        <item name="colorPrimaryVariant">@color/dark_blue</item>
        <item name="colorOnPrimary">@color/white</item>
        
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/light_blue_button</item>
        <item name="colorOnSecondary">@color/white</item>
        
        <!-- Set button styles -->
        <item name="materialButtonStyle">@style/Widget.CalingaApp.Button</item>
    </style>

    <style name="Theme.CalingaApp" parent="Base.Theme.CalingaApp" />
    
    <!-- Button Style -->
    <style name="Widget.CalingaApp.Button" parent="Widget.Material3.Button">
        <item name="backgroundTint">@color/light_blue_button</item>
        <item name="android:textColor">@color/white</item>
    </style>
    
    <!-- Navigation Menu Text Styles -->
    <style name="NavMenuTextStyle" parent="TextAppearance.Material3.BodyLarge">
        <item name="android:fontFamily">@font/sfpro_med</item>
        <item name="android:textSize">15sp</item>
        <item name="android:letterSpacing">0.01</item>
    </style>
    
    <style name="NavSubheaderTextStyle" parent="TextAppearance.Material3.LabelMedium">
        <item name="android:fontFamily">@font/sfpro_bold</item>
        <item name="android:textSize">13sp</item>
        <item name="android:textColor">#9E9E9E</item>
        <item name="android:letterSpacing">0.05</item>
        <item name="android:textAllCaps">false</item>
    </style>
    
    <!-- Modern Navigation Drawer Style -->
    <style name="ModernNavigationView" parent="Widget.Material3.NavigationView">
        <item name="android:paddingTop">8dp</item>
        <item name="android:paddingBottom">8dp</item>
        <item name="itemShapeFillColor">@color/primary_color</item>
        <item name="itemShapeAppearance">@style/RoundedNavigationItemShape</item>
    </style>
    
    <style name="RoundedNavigationItemShape" parent="ShapeAppearance.Material3.Corner.Medium">
        <item name="cornerSize">12dp</item>
    </style>
</resources>