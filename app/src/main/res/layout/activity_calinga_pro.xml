<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F2F2F2"
    tools:context=".CalingaProActivity">

    <!-- Navigation Header -->
    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/toolbar_background"
        android:elevation="4dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:padding="8dp">

            <ImageView
                android:id="@+id/imageViewBack"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@drawable/ic_arrow_back"
                app:tint="@color/bright_orange"
                android:contentDescription="Back"
                android:layout_marginEnd="16dp" />

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:fontFamily="@font/sfpro_bold"
                android:text="CalingaPro Profile"
                android:textColor="@color/bright_orange"
                android:textSize="20sp" />

            <ImageView
                android:id="@+id/imageViewFavorite"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@drawable/ic_heart"
                app:tint="@color/bright_orange"
                android:contentDescription="Add to Favorites"
                android:layout_marginEnd="8dp" />

            <ImageView
                android:id="@+id/imageViewShare"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@drawable/ic_share"
                app:tint="@color/bright_orange"
                android:contentDescription="Share Profile"
                android:layout_marginEnd="16dp" />
        </LinearLayout>
    </androidx.appcompat.widget.Toolbar>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintTop_toBottomOf="@id/toolbar"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <!-- Profile Header Card -->
            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="16dp"
                app:cardCornerRadius="16dp"
                app:cardElevation="8dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <!-- Profile Header with Background -->
                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="200dp"
                        android:background="@color/profile_header_blue">

                        <!-- Profile Picture -->
                        <ImageView
                            android:id="@+id/imageViewPhoto"
                            android:layout_width="100dp"
                            android:layout_height="100dp"
                            android:layout_centerHorizontal="true"
                            android:layout_marginTop="24dp"
                            android:src="@drawable/caregiver"
                            android:background="@drawable/circle_background"
                            android:padding="8dp" />

                        <!-- Status Badge -->
                        <androidx.cardview.widget.CardView
                            android:id="@+id/statusBadge"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignEnd="@id/imageViewPhoto"
                            android:layout_alignBottom="@id/imageViewPhoto"
                            android:layout_marginEnd="-8dp"
                            android:layout_marginBottom="-8dp"
                            app:cardCornerRadius="12dp"
                            app:cardElevation="4dp">

                            <TextView
                                android:id="@+id/textViewStatus"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:background="@color/green"
                                android:paddingHorizontal="8dp"
                                android:paddingVertical="4dp"
                                android:text="ONLINE"
                                android:textColor="@color/white"
                                android:textSize="10sp"
                                android:fontFamily="@font/sfpro_bold" />
                        </androidx.cardview.widget.CardView>

                        <!-- Rating Stars -->
                        <LinearLayout
                            android:id="@+id/ratingContainer"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_below="@id/imageViewPhoto"
                            android:layout_centerHorizontal="true"
                            android:layout_marginTop="8dp"
                            android:orientation="horizontal"
                            android:gravity="center">

                            <TextView
                                android:text="⭐⭐⭐⭐⭐"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:textSize="16sp" />

                            <TextView
                                android:id="@+id/textViewRating"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="4.9"
                                android:textColor="@color/white"
                                android:textSize="14sp"
                                android:fontFamily="@font/sfpro_bold"
                                android:layout_marginStart="4dp" />
                        </LinearLayout>

                    </RelativeLayout>

                    <!-- Basic Info Section -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:padding="20dp">

                        <TextView
                            android:id="@+id/textViewName"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="CALINGApro Antiba Manalo"
                            android:textColor="@color/black"
                            android:textSize="22sp"
                            android:fontFamily="@font/sfpro_bold"
                            android:layout_gravity="center" />

                        <TextView
                            android:id="@+id/textViewTitle"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Registered Nurse • Senior Tier"
                            android:textColor="@color/bright_orange"
                            android:textSize="16sp"
                            android:fontFamily="@font/sfpro_med"
                            android:layout_gravity="center"
                            android:layout_marginTop="4dp" />

                        <!-- Location and Rate Row -->
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:gravity="center"
                            android:layout_marginTop="12dp">

                            <TextView
                                android:text="📍"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:textSize="16sp" />

                            <TextView
                                android:id="@+id/textViewLocation"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:text="Los Angeles, CA"
                                android:textColor="@color/text_secondary"
                                android:textSize="14sp"
                                android:fontFamily="@font/sfpro_med"
                                android:layout_marginStart="4dp" />

                            <TextView
                                android:id="@+id/textViewRate"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="$35/hour"
                                android:textColor="@color/bright_orange"
                                android:textSize="18sp"
                                android:fontFamily="@font/sfpro_bold" />
                        </LinearLayout>

                        <!-- Contact Info -->
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:gravity="center"
                            android:layout_marginTop="12dp">

                            <LinearLayout
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:orientation="horizontal"
                                android:gravity="center">

                                <TextView
                                    android:text="📧"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:textSize="14sp" />

                                <TextView
                                    android:id="@+id/textViewEmail"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="antiba@gmail.com"
                                    android:textColor="@color/text_secondary"
                                    android:textSize="12sp"
                                    android:fontFamily="@font/sfpro_med"
                                    android:layout_marginStart="4dp" />
                            </LinearLayout>

                            <LinearLayout
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:orientation="horizontal"
                                android:gravity="center">

                                <TextView
                                    android:text="📞"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:textSize="14sp" />

                                <TextView
                                    android:id="@+id/textViewPhone"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="+1 561 236 2033"
                                    android:textColor="@color/text_secondary"
                                    android:textSize="12sp"
                                    android:fontFamily="@font/sfpro_med"
                                    android:layout_marginStart="4dp" />
                            </LinearLayout>
                        </LinearLayout>

                    </LinearLayout>
                </LinearLayout>
            </androidx.cardview.widget.CardView>

            <!-- Stats Grid -->
            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="16dp"
                android:layout_marginBottom="16dp"
                app:cardCornerRadius="16dp"
                app:cardElevation="4dp">

                <GridLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:columnCount="2"
                    android:rowCount="2"
                    android:padding="16dp"
                    android:alignmentMode="alignMargins">

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_columnWeight="1"
                        android:orientation="vertical"
                        android:gravity="center"
                        android:padding="16dp">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Experience"
                            android:fontFamily="@font/sfpro_med"
                            android:textColor="@color/text_gray"
                            android:textSize="14sp" />

                        <TextView
                            android:id="@+id/textViewExperience"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="2yrs"
                            android:fontFamily="@font/sfpro_bold"
                            android:textColor="@color/bright_orange"
                            android:textSize="22sp"
                            android:layout_marginTop="8dp" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_columnWeight="1"
                        android:orientation="vertical"
                        android:gravity="center"
                        android:padding="16dp">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Patients"
                            android:fontFamily="@font/sfpro_med"
                            android:textColor="@color/text_gray"
                            android:textSize="14sp" />

                        <TextView
                            android:id="@+id/textViewPatients"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="923"
                            android:fontFamily="@font/sfpro_bold"
                            android:textColor="@color/bright_orange"
                            android:textSize="22sp"
                            android:layout_marginTop="8dp" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_columnWeight="1"
                        android:orientation="vertical"
                        android:gravity="center"
                        android:padding="16dp">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Blood Type"
                            android:fontFamily="@font/sfpro_med"
                            android:textColor="@color/text_gray"
                            android:textSize="14sp" />

                        <TextView
                            android:id="@+id/textViewBloodType"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="O+"
                            android:textColor="@color/bright_orange"
                            android:textSize="22sp"
                            android:fontFamily="@font/sfpro_bold"
                            android:layout_marginTop="8dp" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_columnWeight="1"
                        android:orientation="vertical"
                        android:gravity="center"
                        android:padding="16dp">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Height"
                            android:fontFamily="@font/sfpro_med"
                            android:textColor="@color/text_gray"
                            android:textSize="14sp" />

                        <TextView
                            android:id="@+id/textViewHeight"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="185cm"
                            android:textColor="@color/bright_orange"
                            android:fontFamily="@font/sfpro_bold"
                            android:textSize="22sp"
                            android:layout_marginTop="8dp" />
                    </LinearLayout>

                </GridLayout>
            </androidx.cardview.widget.CardView>

            <!-- Book Appointment Button -->
            <Button
                android:id="@+id/buttonBookAppointment"
                android:layout_width="match_parent"
                android:layout_height="56dp"
                android:layout_marginHorizontal="16dp"
                android:layout_marginBottom="16dp"
                android:backgroundTint="@color/bright_orange"
                android:fontFamily="@font/sfpro_bold"
                android:text="Book Appointment"
                android:textAllCaps="false"
                android:textColor="@color/white"
                android:textSize="16sp"
                app:cornerRadius="16dp" />

            <!-- About Section -->
            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="16dp"
                android:layout_marginBottom="16dp"
                app:cardCornerRadius="16dp"
                app:cardElevation="4dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="20dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="About"
                        android:fontFamily="@font/sfpro_bold"
                        android:textColor="@color/bright_orange"
                        android:textSize="18sp" />

                    <TextView
                        android:id="@+id/textViewAbout"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="12dp"
                        android:fontFamily="@font/sfpro_med"
                        android:text="Antiba Manalo is a compassionate and experienced family medicine practitioner based in Los Angeles. With over 12 years of experience in the healthcare field, she has dedicated her career to providing holistic and patient-centered care to individuals and families."
                        android:textColor="@color/text_gray"
                        android:lineSpacingExtra="4dp" />
                </LinearLayout>
            </androidx.cardview.widget.CardView>

        </LinearLayout>
    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>
