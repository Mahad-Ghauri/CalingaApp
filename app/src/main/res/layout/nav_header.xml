<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="200dp"
    android:orientation="vertical"
    android:background="@drawable/nav_header_gradient"
    android:padding="0dp">

    <!-- Modern Header Background with Gradient -->
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:paddingStart="24dp"
        android:paddingEnd="24dp"
        android:paddingTop="37dp"
        android:paddingBottom="24dp">

        <!-- Modern Profile Image with Shadow -->
        <androidx.cardview.widget.CardView
            android:id="@+id/profile_card"
            android:layout_width="76dp"
            android:layout_height="76dp"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="0dp"
            app:cardCornerRadius="38dp"
            app:cardElevation="8dp"
            app:cardBackgroundColor="@android:color/white">

            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/nav_header_image"
                android:layout_width="72dp"
                android:layout_height="72dp"
                android:layout_margin="2dp"
                android:src="@drawable/ic_person_placeholder"
                app:civ_border_width="0dp" />

        </androidx.cardview.widget.CardView>

        <!-- User Info Container -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/profile_card"
            android:layout_marginTop="10dp"
            android:gravity="center"
            android:orientation="vertical">

            <!-- User Name -->
            <TextView
                android:id="@+id/nav_header_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/sfpro_bold"
                android:text="User Name"
                android:textColor="@android:color/white"
                android:textSize="18sp"
                android:letterSpacing="0.02"
                android:shadowColor="#40000000"
                android:shadowDx="0"
                android:shadowDy="1"
                android:shadowRadius="2" />

            <!-- User Email -->
            <TextView
                android:id="@+id/nav_header_email"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                android:fontFamily="@font/sfpro_med"
                android:text="user@example.com"
                android:textColor="@android:color/white"
                android:textSize="13sp"
                android:alpha="0.85"
                android:letterSpacing="0.01" />

        </LinearLayout>

        <!-- Subtle Decorative Element -->
        <View
            android:layout_width="40dp"
            android:layout_height="3dp"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:background="@drawable/nav_header_accent"
            android:alpha="0.6" />

    </RelativeLayout>

</LinearLayout>
